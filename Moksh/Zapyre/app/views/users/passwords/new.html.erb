<div class="container-fluid" style="background: grey;">
  <h1><strong>Forgot your Passsword?</strong></h1><br>
</div>
<div class="container-fluid" style="width: 30%; position: center;box-shadow: 8px 8px 5px #aaaaaa; margin-top: 30px; border-radius: 10px;padding-bottom: 10px;">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>

	  <div class="form-group">
	    <h4><%= f.label :email %></h4>	
	    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control"%>
	  </div>

	  <div class="form-group">
	    <%= f.label "Send me reset password instructions", class: 'btn btn-success' %>
	  </div>
	<% end %>
	<%= render "users/shared/links" %>
</div>
