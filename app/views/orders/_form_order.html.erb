<%= form_with(url: orders_path(order: @order), method: "post", local: true) do |form| %>
  <p><%= form.hidden_field :product_id, value: product_id %></p>
  <p><%= form.hidden_field :quantity, value: c_quantity %></p>
  <p><%= form.submit 'Buy',class: 'btn btn-success', data: { "disable-with": "Buying..." }%></p>
<% end %>