<div class="container-fluid" style="background: grey;">
  <h1><strong>Cart</strong></h1><br>  
</div>
<p id="notice"><%= notice %></p>
<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>
<div class="container">
  <div class="row">
    <% if !@cart.nil? %>
      <% @cart.products.each do |product|%>
        <div class="col-md-4" , style="box-shadow: 8px 8px 5px #aaaaaa;"><br>          
          <%= image_tag product.image.url(:medium),height: "200>", width: "200>"  ,class: "rounded mx-auto d-block"%> <br> <b> Name :</b> <%= product.name %><br>               
          <b> Price :</b> <%= product.price %> â‚¹ <br>               
          <b> Brand :</b> <%= product.brand %><br>          
          <b> Description :</b> <%= product.description %><br>              
          <b> Offer :</b> <%= product.offer %><br>
          <b> Quantity :</b> <%= @cart.quantities.find_by(product_id: product.id).quantity %><br>           
          <b><%= link_to 'Show',product_path(product),class: 'btn btn-info' %> </b><br>   
          <b><%= link_to 'Remove', {controller: :carts, action: :remove_product_from_cart, id: product.id},  class: 'btn btn-danger' %> </b><br> 
        </div>
      <% end %>
    <% end %>  
  </div>
</div>
<% if !current_user.cart.nil? && !current_user.cart.products.first.nil? %>
  <%= render partial: "orders/form_order"%> 
<% end %>
