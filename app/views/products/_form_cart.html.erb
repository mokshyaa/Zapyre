

	<div class="row"> 
		<%= form_with(model:  @cart,  url: carts_path, method: "post", local: true) do |form| %>
			<p>
				<%= form.hidden_field :product_id, value: @products.id  %>
			</p>
			<p>
			  <%= form.label :quantity %><br>
			  <%= form.text_field :quantity %>
			</p>
			<p>
				<%= form.submit 'Add to Cart',class: 'btn btn-primary'%>
			</p>
		<% end %>
	</div>
