<%= form_with(url: wishlists_path(wishlist: @wishlist), method: "post", local: true) do |form| %>
	<%= form.hidden_field :product_id, value: product_id  %>
	<% if current_user.wishlist.nil? || current_user.wishlist.products.where(id: product_id).first.nil? %>
		<%= form.submit 'Wishlist',class: 'btn btn-primary'%>
	<% else %>
		<%= form.submit 'Added to the Wishlist',class: 'btn btn-primary' , disabled: true%>
	<% end %>
<% end %>	


